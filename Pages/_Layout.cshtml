<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="~/images/RNR_Logo.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TesDMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <header>
        <div id="navbar"></div> <!-- React NavBar target -->
    </header>
    <div id="content-wrapper">
        <div id="content">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
        <div id="footer"></div> <!-- React Footer target -->
    </div>
    <script src="~/lib/jquery/dist/jquery-3.7.1.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/bundle.js"></script> <!-- Ensure this matches the output from Webpack -->
    @RenderSection("Scripts", required: false)
</body>
</html>
